{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "strictNullChecks": true,
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@public/*": ["./public/*"],
      "@components/*": ["./src/components/*"]
    }
  }
}

