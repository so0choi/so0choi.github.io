---
import { getCollection } from "astro:content";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../../consts";
import "@styles/areas.css";
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { Font } from "astro:assets";

const posts = await getCollection("blog");
const areas = Array.from(new Set(posts.map((p) => p.id.split("/")[0]))).sort();
---

<Font cssVariable="--font-science-gothic" preload />

<BaseLayout title={`${SITE_TITLE} â€” Areas`} description={SITE_DESCRIPTION}>
  <h1>Browse by Category</h1>
  <ul class="grid grid-cols-1 gap-4 sm:grid-cols-2">
    {
      areas.map((area) => (
        <li class="block rounded-lg border border-gray-200 bg-white p-4 font-medium text-gray-800 shadow-sm transition-all hover:border-blue-300 hover:bg-blue-50 hover:shadow-md">
          <a
            class="block w-full font-medium tracking-tight text-gray-800!"
            href={`/blog/areas/${area}`}
          >
            {area && area[0].toUpperCase() + area.slice(1, area.length)}
          </a>
        </li>
      ))
    }
  </ul>
</BaseLayout>
